@model Boxer.UI.Models.Orders

@{
    ViewData["Title"] = "UploadCsv";
}

<h1>Orders</h1>

<h4>Upload CSV</h4>
<hr />
<div class="row">
    <div class="col-md-4">

        <!-- Validation summary to display all errors -->
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <form asp-action="UploadCsv" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label for="file">Select CSV file</label>
                <input type="file" name="file" id="file" class="form-control" accept=".csv" required />
                <!-- Display validation message for the 'file' field -->
                @Html.ValidationMessage("file", "", new { @class = "text-danger" })
            </div>
            <button type="submit" class="btn btn-primary">Upload</button>
        </form>

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger mt-3">
                @TempData["ErrorMessage"]
            </div>
        }

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success mt-3">
                @TempData["SuccessMessage"]
            </div>
        }
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

