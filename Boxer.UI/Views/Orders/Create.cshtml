@model Boxer.UI.Models.Orders

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-center">Create an Order</h1>
<hr />

<form class="row m-0 pt-2" asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="col-lg-5 mx-auto">
        <div class="form-floating mb-3">
            <input asp-for="Items" class="form-control" />
            <label asp-for="Items"></label>
            <span asp-validation-for="Items" class="text-danger"></span>
        </div>
        <div class="form-floating mb-3">
            <input asp-for="Quantity" class="form-control" />
            <label asp-for="Quantity"></label>
            <span asp-validation-for="Quantity" class="text-danger"></span>
        </div>
        <div class="form-floating mb-3">
            <input asp-for="Date" type="date" value="@DateTime.Today.ToString("yyyy-MM-dd")" class="form-control" />
            <label asp-for="Date"></label>
            <span asp-validation-for="Date" class="text-danger"></span>
        </div>
        <div class="form-floating mb-3">
            <input type="button" value="Back" onclick="location.href='@Url.Action("Index", "Orders")'" class="btn btn-danger" />
        </div>
    </div>
    <div class="col-lg-5 mx-auto">
        <div class="form-floating mb-3">
            <input asp-for="Price" class="form-control" />
            <label asp-for="Price"></label>
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div class="form-floating mb-3">
            <select asp-for="Supplier" asp-items="Model.Suppliers" class="form-select"></select>
            <label asp-for="Supplier"></label>
        </div>
        <div class="form-floating mb-3">
            <input asp-for="DeliveryDate" type="date" value="@DateTime.Today.ToString("yyyy-MM-dd")" class="form-control" />
            <label asp-for="DeliveryDate"></label>
            <span asp-validation-for="DeliveryDate" class="text-danger"></span>
        </div>
        <div class="form-floating mb-3">
            <input type="submit" value="Create" class="btn btn-primary float-end" />
        </div>
    </div>
</form>


